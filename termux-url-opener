#!/bin/bash


red="\e[31m"
green="\e[32m"
yellow="\e[33m"
orange="\e[34m"
magenta="\e[35m"
cyan="\e[36m"
e="\e[0m"
b="\e[1m"
i="\e[3m"

link=$1

Spotcreds()
{
    echo
    echo -e "${magenta}Checking credentials${e}"
    if [[ -v SPOTIPY_CLIENT_ID ]]
    then
        echo -e "${magenta}Credentials found${e}"
        echo
    else
        echo -e "${red}Credentials not found${e}\n\n${yellow}Creating credentials file\nGet your credentials from${e} ${magenta}https://developer.spotify.com/my-applications${e}"
        echo -e "\n${orange}Please enter Spotify Client ID:\n${e}"
        read CLIENT_ID
        echo -e "\n\n\n${orange}Please enter Spotify Client Secret:\n${e}"
        read CLIENT_SECRET
        echo export SPOTIPY_CLIENT_ID=$CLIENT_ID >> $PREFIX/etc/zshrc
        echo export SPOTIPY_CLIENT_SECRET=$CLIENT_SECRET >> $PREFIX/etc/zshrc
        echo
        echo -e "${green}Credentials saved successfully\nPlease restart app to use this feature{e}"
        exit
    fi
}


Spotdl()
{
    Spotcreds
    spotify_dl -l $link -s -w -k -o $EXTERNAL_STORAGE/YTDL
    exit
}


if [[ $link == *open.spotify.com* ]]
then
    Spotdl
fi


echo
echo -e "${magenta}Do you wish to download Video or Audio?${e}\n\n1. Video\n2. Audio"
echo
read filetype


if [[ $filetype -eq 1 ]]
then
    if [[ -f ~/print_vid_data ]]
    then
        rm ~/print_vid_data
        rm ~/vid_formats
        rm ~/print_aud_data
        rm ~/aud_formats
        rm ~/print_sub_data
    fi
    echo
    echo -e "${yellow}Getting available resolutions\nPlease wait for a while...${e}"
    echo
    python ~/bin/ytdl.py $link
    bash ~/print_vid_data
    echo
    echo -e "${yellow}Please enter the Sr.N of your desired video format${e}"
    echo
    read video_selection
    echo
    bash ~/print_aud_data
    echo
    echo -e "${yellow}Please enter the Sr.N of your desired audio format${e}"
    echo
    read audio_selection
    subtitle_selection=""
    if [[ -f ~/print_sub_data ]]
    then
        echo
        bash ~/print_sub_data
        echo
        echo -e "${yellow}Please type the language codes of your desired subtitle languages (separate them by commas if multiple, example: ${e}${cyan}de, ja${e}${yellow})\nEnter none for no subtitles${e}"
        echo
        read subtitle_choices
        typeset -l subtitle_choices
        if ! [[ subtitle_choices=="none" ]]
        then
            echo
            echo -e "${yellow}Do you wish to embed subtitles within the video (in-built soft subs) [y/n]:${e} "
            read embed_selection
            typeset -l embed_selection
            if [[ embed_selection=="y" ]]
            then
                embed_subs="--embed-subs"
            else
                embed_subs="--no-embed-subs"
            fi
            subtitle_selection="--write-subs --sub-format srt/vtt/best --sub-langs ${subtitle_choices} ${embed_subs}"
        fi
    fi
fi

echo
echo -e "${yellow}Working on it\nPlease wait for a while...${e}"
echo
echo


if [[ $filetype -eq 1 ]]
then
    format=$(awk NR==$video_selection ~/vid_formats)+$(awk NR==$audio_selection ~/aud_formats)
else
    format='328/380/338/258/327/256/141/251/bestaudio --extract-audio --audio-format mp3 --audio-quality 320k --embed-thumbnail --add-metadata'
fi


if [[ $link == */playlist?* ]]
then
    playlist="--yes-playlist"
    output='$EXTERNAL_STORAGE/YTDL/%(playlist_index)s.%(title)s - %(format_note)s.%(ext)s'
else
    playlist="--no-playlist"
    output='$EXTERNAL_STORAGE/YTDL/%(title)s - %(format_note)s.%(ext)s'
fi


if [[ $filetype -eq 1 ]]
then
    rm ~/print_vid_data
    rm ~/vid_formats
    rm ~/print_aud_data
    rm ~/aud_formats
    rm ~/print_sub_data
fi
yt-dlp $quiet -f $format --prefer-ffmpeg --output "$output" $subtitle_selection --no-mtime --no-post-overwrites --geo-bypass --ignore-errors $playlist $link

echo
echo
echo -e "${green}Done${e}"